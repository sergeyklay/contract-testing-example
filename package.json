{
  "name": "specmatic-testing-example",
  "version": "1.7.0",
  "private": true,
  "description": "Provider-side demo using Specmatic to do contract driven development",
  "main": "index.js",
  "scripts": {
    "lint-redocly": "redocly lint --config .redocly.yaml contracts/documentation.yaml",
    "lint-spectral": "spectral lint --fail-severity=info contracts/**/*.yaml",
    "lint": "npm run lint-redocly && npm run lint-spectral"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sergeyklay/specmatic-testing-example.git"
  },
  "keywords": [
    "api",
    "contracts",
    "api-testing",
    "contract-testing",
    "contract-test",
    "specmatic",
    "openapi3",
    "openapi"
  ],
  "author": "Serghei Iakovlev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sergeyklay/specmatic-testing-example/issues"
  },
  "homepage": "https://github.com/sergeyklay/specmatic-testing-example#readme",
  "dependencies": {
    "@redocly/cli": "^1.0.0-beta.123",
    "@stoplight/spectral-cli": "^6.6.0"
  }
}
